<plugin name='file-uploader' version='2.4.5-RC1' grailsVersion='2.1 &gt; *'>
  <author>Federico Hofman</author>
  <authorEmail>fhofman@gmail.com</authorEmail>
  <title>File Uploader Grails Plugin</title>
  <description>This plugin provides easy integration with your Grails application
            to handle file uploading with multiple configuration.
            
            This is a heavily modified version with updates from visheshd, danieldbower, SAgrawal14"
            This plugin also supports uploading files to CDN for Rackspace &amp; Amazon</description>
  <documentation>https://github.com/causecode/grails-file-uploader</documentation>
  <type>FileUploaderGrailsPlugin</type>
  <resources>
    <resource>FileUploaderBootStrap</resource>
    <resource>com.lucastex.grails.fileuploader.FileUploaderController</resource>
    <resource>com.lucastex.grails.fileuploader.UFile</resource>
    <resource>com.lucastex.grails.fileuploader.UFileMoveHistory</resource>
    <resource>com.lucastex.grails.fileuploader.RenewTemporaryURLJob</resource>
    <resource>com.lucastex.grails.fileuploader.FileUploaderService</resource>
    <resource>com.lucastex.grails.fileuploader.RackspaceCDNFileUploaderService</resource>
    <resource>com.lucastex.grails.fileuploader.FileUploaderTagLib</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='org.apache.jclouds.provider' name='cloudfiles-us' version='1.7.2' />
      <dependency group='org.apache.jclouds' name='jclouds-core' version='1.7.2' />
      <dependency group='org.apache.jclouds.provider' name='aws-s3' version='1.7.2' />
      <dependency group='org.apache.jclouds' name='jclouds-compute' version='1.7.2' />
    </compile>
  </dependencies>
  <plugins>
    <runtime>
      <plugin group='org.grails.plugins' name='hibernate' version='2.2.2' />
    </runtime>
  </plugins>
  <runtimePluginRequirements />
  <behavior />
</plugin>